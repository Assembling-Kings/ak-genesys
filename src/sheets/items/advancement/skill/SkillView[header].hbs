<section class="skill-header">
   <div class="skill-sub-header truncate-text">{{>"systems/ak-genesys/tplt/sheets/CommonView[header].hbs"}}</div>
   {{#if mode.edit}}
      <select name="system.characteristic">
         {{#each systemFields.characteristic.choices}}
            <option value="{{this}}" {{#if (eq this @root.system.characteristic)}}selected{{/if}}>
               {{localize (concat "GENESYS.values.characteristic." this ".label")}}
            </option>
         {{/each}}
      </select>
   {{else}}
      {{!-- Only make this block visible if it's embebbed --}}
      <div class="skill-rank">
         {{!-- Only make the next line visible if it's a career skill --}}
         <i class="fa-solid fa-certificate"></i>
         <div>{{system.rank}}</div>
      </div>
   {{/if}}
</section>